<!DOCTYPE html>
<html>
  <head>
    <title>Discount Deck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- WEB FONTS -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:100,300,400,600,700|Montserrat:600,700' rel='stylesheet' type='text/css'>
  </head>

  <body class="discountdeck" data-turbolinks="false">
    <%= yield %>
  </body>
</html>
